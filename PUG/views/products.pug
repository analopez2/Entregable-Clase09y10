html 
  head
    title Api Productos
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css')
    
  body 

    a(href="/api/productos/" class="btn btn-primary rounded mb-4 mll-4 px-3 py-2")  Formulario
    a(href="/api/productos/" class="btn btn-primary rounded mb-4 mll-4 px-3 py-2")  Vista de Productos

    div(class="container m-5")
        div(class="mt-5")
            div(class="table-responsive mt- rounded-lg")
                h4(class="text-danger") Vista de Productos:

                if products.length < 1
                    h5(class="alert alert-danger") No se encontraron productos.
                else
                    table(class="table table-dark rounded-lg")
                        thead
                            tr
                                th Nombre:
                                th Precio:
                                th Foto:
                        tbody
                            each product in products
                                tr
                                    td #{ product.title }
                                    td $ #{ product.price }
                                    td
                                        img(src=product.thumbnail)